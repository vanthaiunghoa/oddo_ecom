<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="patient_name" />
            </field>
        </field>
    </record>

<!--    tree view of the patient model-->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="patient_name"/>
                <field name="name_sec"/>
                <field name="patient_age"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <!--    form view of the patient model-->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name_sec" readonly="1"/>
                        </h1>
                    </div>
                <group>
                    <group>
                        <field name="patient_name"/>
                    </group>
                    <group>
                        <field name="patient_age"/>
                    </group>
                </group>
                <group>
                        <field name="notes"/>
                        <field name="image"/>
                </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="message_follower"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name" filter_domain="['|',('patient_name', 'ilike', self),('name_seq', 'ilike', self)]"/>
            </search>
        </field>
    </record>

<!--    action of the patients menu-->
     <record id="action_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create First Patient !
                </p>
           </field>
     </record>


    <menuitem id="hospital_root" name="Hospital" sequence="6" web_icon="om_hospital,static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patients" parent="hospital_root" action="action_patient"/>

</odoo>